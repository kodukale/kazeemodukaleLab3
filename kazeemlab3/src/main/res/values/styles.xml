<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowBackground"></item>-->
    </style>

    <style name="home_object">
        <item name="color">@color/home_object_color</item>
        <item name="android:textSize">@dimen/home_object_dimen</item>
        <item name="android:text">@string/home_object_string</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/home_object_marginTop</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>